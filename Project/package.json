{
  "author": "Vitalii Belei",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "live-server --port=3301",
    "api": "nodemon Server/index.js",
    "sass": "sass styles/src/main.scss styles/dist/main.css",
    "sass:watch": "sass --watch styles/src/main.scss styles/dist/main.css",
    "dev": "npm-run-all --parallel serve api sass:watch lint:js:watch lint:css:watch",
    "lint": "npm-run-all lint:js lint:css",
    "typecheck": "tsc --noEmit",
    "lint:js": "eslint js/**/*.js",
    "lint:js:watch": "chokidar \"js/**/*.js\" -c \"npm run lint:js -- --cache\" --initial",
    "lint:css": "stylelint \"styles/**/*.css\"",
    "lint:css:watch": "chokidar \"styles/**/*.css\" -c \"npm run lint:css\" --initial",
    "build": "echo \"Dummy build script required for Autocode Compile\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "json-server": "^1.0.0-beta.6",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "sass": "^1.94.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1"
  }
}
